<?xml version="1.0" encoding="UTF-8"?>
<config>
	<useExecuteHandler>true</useExecuteHandler>
	<slow_query_time>1000</slow_query_time>
	<mapper_check_interval>1000</mapper_check_interval>
<worker>
	<queue_size>500</queue_size>
	<min_thread>20</min_thread>
	<max_thread>100</max_thread>
</worker>

<api>
	<server>
		<port>9090</port>
		<tcpNoDelay>true</tcpNoDelay>
		<writeBufferHighWaterMark>102400</writeBufferHighWaterMark>
		<sendBufferSize>1048576</sendBufferSize>
		<receiveBufferSize>1048576</receiveBufferSize>
		<backlog>102400</backlog>
		<soLinger>0</soLinger>
		<keepAlive>false</keepAlive>
	</server>
	<child>
		<sendBufferSize>1048576</sendBufferSize>
		<receiveBufferSize>1048576</receiveBufferSize>
		<tcpNoDelay>true</tcpNoDelay>
		<soLinger>0</soLinger>
	</child>
</api>
<monitor>
	<port>10000</port>
</monitor>

<redis>
	<servers>
		<host>
			<ip>127.0.0.1</ip>
			<port>6379</port>
		</host>
		<host>
			<ip>127.0.0.1</ip>
			<port>6379</port>
		</host>		
	</servers>
	<default_expire>10</default_expire>
	<maxActive>100</maxActive> 
	<maxIdle>200</maxIdle>
	<maxWait>20000</maxWait>
	<testOnBorrow>true</testOnBorrow>
	<testWhileIdle>true</testWhileIdle>
	<evictableIdleTimeMillis>60000</evictableIdleTimeMillis>
	<timeBetweenEvictionRunsMillis>30000</timeBetweenEvictionRunsMillis>
</redis>

<jdbcs>
	<item>
		<name>sample</name>
		<sqlmapper>sample</sqlmapper>
		<mybatis-conf>mybatis/mysql-config.xml</mybatis-conf>
		<driver>com.mysql.jdbc.Driver</driver>
		<url>
		<![CDATA[
			jdbc:mysql://127.0.0.1:3306/sample?useUnicode=true&characterEncoding=UTF-8&connectTimeout=1000
		]]>
		</url>
		<user>sampleUser</user>
		<password>sampleUaser</password>
		<defaultAutoCommit>true</defaultAutoCommit>
	</item>
	
	<item>
		<name>sample.multi</name>
		<sqlmapper>sample</sqlmapper>
		<mybatis-conf>mybatis/mysql-config.xml</mybatis-conf>
		<driver>com.mysql.jdbc.Driver</driver>
		<urls>
			<url>
				<![CDATA[
					jdbc:mysql://127.0.0.1:3306/sample1?useUnicode=true&characterEncoding=UTF-8&connectTimeout=1000&autoReconnect=true 
				]]>
			</url>
			<url>
				<![CDATA[
					jdbc:mysql://127.0.0.1:3306/sample2?useUnicode=true&characterEncoding=UTF-8&connectTimeout=1000&autoReconnect=true
				]]>
			</url>
			<url>
				<![CDATA[
					jdbc:mysql://127.0.0.1:3306/sample3?useUnicode=true&characterEncoding=UTF-8&connectTimeout=1000&autoReconnect=true 
				]]>
			</url>
		</urls>
		<user>sampleUser</user>
		<password>sampleUser</password>
		<defaultAutoCommit>true</defaultAutoCommit>
	</item>
</jdbcs>

</config>